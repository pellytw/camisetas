<h1>Listado de Clubes</h1>

<table class="table table-striped">
  <tr>
    <th>Nombre</th>
    <th></th>
    <th></th>
    <th></th>
  </tr>

<% @clubs.each do |club| %>
  <tr>
    <td><%= club.nombre %></td>
    <td><%= link_to 'Ver', club, :class => "btn" %></td>
    <td><%= link_to 'Editar', edit_club_path(club), :class => "btn" %></td>
    <td><%= link_to 'Eliminar', club, method: :delete, data: { confirm: 'Seguro desea eliminar?' }, :class => "btn" %></td>
  </tr>
<% end %>
</table>

<br />

<%= link_to 'Nuevo Club', new_club_path, :class => "btn btn-success" %>
