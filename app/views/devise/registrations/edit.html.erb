<h2>Editar <%= resource_name.to_s.humanize %></h2>

<%= form_for(resource, :as => resource_name, :url => registration_path(resource_name), :html => { :method => :put }) do |f| %>
  <%= devise_error_messages! %>

   <%= render :partial => 'user_fields' , :locals => {:f => f} %>

  <div><%= f.label :current_password %> <i>(necesitamos su password para realizar sus cambios)</i><br />
  <%= f.password_field :current_password %></div>

  <div><%= f.submit "Actualizar" %></div>
<% end %>

<h3>Cancelar cuenta</h3>

<p>Cancelar su cuenta? <%= link_to "Cancelar mi Cuenta", registration_path(resource_name), :confirm => "Seguro desea cancelar?", :method => :delete %>.</p>

<%= link_to "atras", :back %>