<h1>Listado de Estados</h1>

<table class=" table table-striped">
  <tr>
    <th>Nombre</th>
    <th></th>
    <th></th>
    <th></th>
  </tr>

<% @estados.each do |estado| %>
  <tr>
    <td><%= estado.nombre %></td>
    <td><%= link_to 'Ver', estado, :class => "btn" %></td>
    <td><%= link_to 'Editar', edit_estado_path(estado), :class => "btn" %></td>
    <td><%= link_to 'Eliminar', estado, method: :delete, data: { confirm: 'Are you sure?' }, :class => "btn" %></td>
  </tr>
<% end %>
</table>

<br />

<%= link_to 'Nuevo Estado', new_estado_path, :class => "btn btn-success" %>
