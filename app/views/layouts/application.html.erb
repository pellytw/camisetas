  </div>
</div> 									

<div class="row"> 
	<div class="span1">
		
	</div>
	<div class="span11">
		<div class="container">
		   <% if flash[:error] then %>
		   	<div class="alert alert-error">
				<button type="button" class="close" data-dismiss="alert">×</button>
				<h4>Error!</h4>
				<%= flash[:error]%>
    		</div>
		   <% end %>
		   <% if alert then %>
       		<div class="alert alert-block">
				<button type="button" class="close" data-dismiss="alert">×</button>
				<h4>Advertencia!</h4>
				<%= alert %>
			</div>	       		
		   <% end %>
		   <% if notice then%>   
		       <div class="alert alert-info">
    				<%= notice%>
    		   </div>
    	   <% end %>
		   <%= yield %>
		      

		</div>
	</div>
</div>			

	

					
</body>
</html>
