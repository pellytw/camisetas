<p id="notice"><%= notice %></p>

<div class="row">
  <div class="span7">
  	
  	<table class="table table-striped">	  
	  	<tr><td><h4>Tipo de Producto</h4></td><td><h4><%= @producto.tipo_producto %></h4></td></tr>
	  	<tr><td><h4>Club</h4></td><td><h4><%= @producto.club %></h4></td></tr>
	  	<tr><td><h4>Titularidad</h4></td><td><h4><%= @producto.titularidad %></h4></td></tr>
		<tr><td><h4>Talle</h4></td><td><h4><%= @producto.talle %></h4></td></tr>
		<tr><td><h4>Stock</h4></td><td><h4><%= @producto.stock %></h4></td></tr>
		<tr><td><h4>Precio lista</h4></td><td><h4><%= @producto.precio_lista %></h4></td></tr>
		<tr><td><h4>Precio p√∫blico</h4></td><td><h4><%= @producto.precio_publico %></h4></td></tr>
	</table>
  	
  </div>

  <div class="span5">
  	
	<% if (@producto.foto_file_name != nil) then %>
  	<div id="myCarousel" class="carousel slide">
	    <div class="carousel-inner">
		  	 <div class="item active">      	
		      	<%= image_tag @producto.foto.url(:medium) %>
		        <div class="carousel-caption">
		          <h4></h4>
		          <p>Foto frente</p>
		        </div>
		      </div>
		      <div class="item">
		      	<% if (@producto.foto2_file_name != nil) then %>		      	
			        <%= image_tag @producto.foto2.url(:medium) %>
			        <div class="carousel-caption">
			          <h4></h4>
			          <p>Foto espalda</p>
			        </div>
		        <% else %>
		        	<%= image_tag src="/assets/no disponible.jpg" %>
			        <div class="carousel-caption">
			          <h4></h4>
			          <p>Foto espalda</p>
			        </div>
		        <% end %>
		     </div>   
	     </div>
	     <a class="left carousel-control" href="#myCarousel" data-slide="prev">&lsaquo;</a>
	     <a class="right carousel-control" href="#myCarousel" data-slide="next">&rsaquo;</a>
    </div>  
    
    <% else %>
    
    	<img src="/assets/no disponible.jpg"  />
    
  	<% end %>
      
  </div>

</div>



