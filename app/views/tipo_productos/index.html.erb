<h1>Listado de Tipo de Productos</h1>

<table>
  <tr>
    <th>Nombre</th>
    <th></th>
    <th></th>
    <th></th>
  </tr>

<% @tipo_productos.each do |tipo_producto| %>
  <tr>
    <td><%= tipo_producto.nombre %></td>
    <td><%= link_to 'Ver', tipo_producto, :class => "btn btn-small" %></td>
    <td><%= link_to 'Editar', edit_tipo_producto_path(tipo_producto), :class => "btn btn-small" %></td>
    <td><%= link_to 'Eliminar', tipo_producto, method: :delete, data: { confirm: 'Seguro desea eliminar?' }, :class => "btn btn-small" %></td>
  </tr>
<% end %>
</table>

<br />

